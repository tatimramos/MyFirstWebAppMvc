@*aqui definimos que a view terá a sua disposição o objeto Seller*@
@model WebSalesApp.Models.Seller

@{
    ViewData["Title"] = "Create";
}


<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
@*pula linha*@
<hr />

@*o row garante que o div ocupará a largura da tela*@
<div class="row">
    @*define quanto da tela será ocupado*@
    @*o bootstrap divide a tela em 12, 4 então ocupará 1/3 da tela*@
    <div class="col-md-4">
        @*criando o formulário*@
        @*esse create é para o método POST (alteração)*@
        <form asp-action="Create">
            <div class="form-group">
                @*define p label que vai aparecer na caixinha para digitar*@
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            @*botão para enviar os dados para cadastro*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>


</div>
@**@