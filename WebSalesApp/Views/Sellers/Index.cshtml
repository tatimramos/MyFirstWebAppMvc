@*usado para declarar o tipo de objeto que será exibido, no caso um IEnumerable que será uma lista de Seller*@
@model IEnumerable<WebSalesApp.Models.Seller>


@{
    ViewData["Title"] = "Sellers";
}


<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>


@*criação de uma tabela para exibição dos dados*@
<table class="table table-striped table-hover">
    <thead>
        @*para colorir o fundo do cabeçalho*@
        <tr class="success">
            <th>
                @*buscando os atributos na lista declarada em Model acima para criação do cabeçalho da tabela*@
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*varredura na lista declarada em Model acima para criação de linhas com os dados na tabela*@
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                @*criação de links para alteração dos Sellers posteriormente*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>

</table>

